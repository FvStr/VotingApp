<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Circular ImageView for Profile Picture -->
                <ImageView
                    android:id="@+id/profileImage1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/akmal"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_image_background" />

                <!-- Text Information -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama : Akmal Faiz Athallah"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM : 2203421041"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas : BM5B"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Circular ImageView for Profile Picture -->
                <ImageView
                    android:id="@+id/profileImage2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/suta"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_image_background" />

                <!-- Text Information -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama : Favian Suta Pambudi"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM : 2203421007"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas : BM5B"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
