<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg3">

    <!-- Konten dapat di-scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chooseButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nama Paslon -->
            <TextView
                android:id="@+id/paslonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andi Pratama"
                android:textSize="24sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Foto Paslon -->
            <ImageView
                android:id="@+id/paslon1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/paslon1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_image_background"
                android:layout_marginBottom="16dp" />

            <!-- Informasi Paslon -->
            <TextView
                android:id="@+id/paslonInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@color/white"
                android:padding="8dp"
                android:text="Andi Pratama adalah seorang profesional muda yang berpengalaman dalam bidang bisnis dan manajemen. Dengan latar belakang pendidikan di bidang ekonomi dan pengalaman lebih dari 10 tahun sebagai konsultan bisnis, Andi dikenal sebagai sosok yang inovatif dan memiliki kemampuan pemecahan masalah yang baik. Dia berkomitmen untuk meningkatkan kesejahteraan masyarakat melalui program-program pemberdayaan ekonomi dan pelatihan kewirausahaan. Andi percaya bahwa perubahan dimulai dari langkah-langkah kecil yang nyata, dan ia siap membawa ide-ide segar ke dalam komunitas."
                android:textAlignment="gravity"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Tombol Pilih -->
    <Button
        android:id="@+id/chooseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:gravity="center"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
